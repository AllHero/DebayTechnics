@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.PortfolioItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using DebayTechnics.Helpers
@{
	Layout = "Master.cshtml";
}
<main id="main">
@Html.Partial("~/Views/Partials/Breadcrumbs.cshtml")
<!-- ======= Projet Details Section ======= -->
    <section id="project-details" class="project-details">
      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="position-relative h-100">
          <div class="slides-1 portfolio-details-slider swiper">
            <div class="swiper-wrapper align-items-center">

              @{
                foreach (var image in Model.Image)
                {
                  <div class="swiper-slide">
                    <img src="@image.Url()" alt="" class="d-block mx-auto w-100">
                  </div>
                }
              }
            </div>
            <div class="swiper-pagination"></div>
          </div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>

        </div>

        <div class="row justify-content-between gy-4 mt-4">

          <div class="col-lg-8">
            <div class="portfolio-description">
              <h2>@Model.ProjectName</h2>
              @Html.RichTxtToHtml(Model.Description)

              <!--
              <div class="testimonial-item">
                <p>
                  <i class="bi bi-quote quote-icon-left"></i>
                  Ik ben een klant die ook mijn woord hier wil neerzetten over het project Of ik ben een medewerker die iets verduidelijkt
                  <i class="bi bi-quote quote-icon-right"></i>
                </p>
                <div>
                  <img src="assets/img/testimonials/testimonials-2.jpg" class="testimonial-img" alt="">
                  <h3>Sara</h3>
                </div>
              </div>-->

            </div>
          </div>

          <div class="col-lg-3">
            <div class="portfolio-info">
              <h3>Project informatie</h3>
              <ul>
                <li><strong>Categorie</strong> <span>@Model.Type</span></li>
                <li><strong>Locatie</strong> <span>@Model.Locatie</span></li>
              </ul>
            </div>
          </div>

        </div>

      </div>
    </section><!-- End Projet Details Section -->
</main>