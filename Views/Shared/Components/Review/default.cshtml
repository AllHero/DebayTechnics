@using DebayTechnics.Controllers
@model DebayTechnics.Models.TestimonialModel

<form class="php-email-form my-3">
    @using (Html.BeginUmbracoForm<ReviewController>(nameof(ReviewController.SubmitForm), FormMethod.Post))
    {
        @Html.HiddenFor(m => m.TestimonialFormId)
        <div class="row">
            <div class="col-md-12 form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Naam" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="form-group mt-3">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Bericht", rows = "7" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
        @Html.TextBoxFor(m => m.Agree, htmlAttributes: new { @class="form-control", value="", style="display:none;" })
        <div class="my-3">
        </div>
        <div class="text-center"><button type="submit" class="contact-submit">Verstuur</button></div>
    }
</form>