@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Services>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using DebayTechnics.Services
@inject IServiceItemService ServiceItemService
@{
	Layout = "Master.cshtml";
	var diensten = ServiceItemService.GetServiceItems();
}
<main id="main">
@Html.Partial("~/Views/Partials/Breadcrumbs.cshtml")
<!-- ======= Services Section ======= -->
    <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">

        <div class="row gy-4">
        @{
          foreach (var dienst in diensten.Cast<ServiceItem>())
          {
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
              <div class="service-item  position-relative">
                <div class="icon">
                  <i class="@dienst.Icon"></i>
                </div>
                <h3>@dienst.Title</h3>
                <p>@dienst.ShortDescription</p>
                <a href="@dienst.Url()" class="readmore stretched-link">Meer <i class="bi bi-arrow-right"></i></a>
              </div>
            </div><!-- End Service Item -->
          }
        }
          

        </div>

      </div>
    </section><!-- End Services Section -->
</main>