                  <div class="social">
                    <a href="mailto:@member.Email"><i class="bi bi-envelope"></i></a>
                  </div>
                </div>
                <div class="member-info text-center">
                  <h4>@member.Naam</h4>
                </div>
              </div>
            }
          }
          

