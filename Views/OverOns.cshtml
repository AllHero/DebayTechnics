@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.OverOns>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using DebayTechnics.Helpers
@{
	Layout = "Master.cshtml";
  var crewmembers = Model.Crew.Select(x => (CrewMember) x.Content).ToList();
}

<main id="main">
@Html.Partial("~/Views/Partials/Breadcrumbs.cshtml")
<!-- ======= About Section ======= -->
    <section id="about" class="about">
      <div class="container" data-aos="fade-up">

        <div class="row position-relative">

          <div class="col-lg-7 about-img" style="background-image: url('@Model.HeadImage.Url()');"></div>

          <div class="col-lg-7">
            <h2>@Model.Subtitle</h2>
            <div class="our-story">
              <h4>Sinds 2016</h4>
              <h3>Ons verhaal</h3>
              @Html.RichTxtToHtml(Model.AboutText)
            </div>
          </div>

        </div>

      </div>
    </section>
    <!-- End About Section -->

    <!-- ======= Stats Counter Section ======= -->
    <section id="stats-counter" class="stats-counter section-bg">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-3 col-md-6">
            <div class="stats-item d-flex align-items-center w-100 h-100">
              <i class="bi bi-emoji-smile color-blue flex-shrink-0"></i>
              <div>
                <span data-purecounter-start="0" data-purecounter-end="@Model.AantalKlanten" data-purecounter-duration="1" class="purecounter"></span>
                <p>Gelukkige klanten</p>
              </div>
            </div>
          </div><!-- End Stats Item -->

          <div class="col-lg-3 col-md-6">
            <div class="stats-item d-flex align-items-center w-100 h-100">
              <i class="bi bi-cone-striped color-orange flex-shrink-0"></i>
              <div>
                <span data-purecounter-start="0" data-purecounter-end="@Model.Projecten" data-purecounter-duration="1" class="purecounter"></span>
                <p>Projecten</p>
              </div>
            </div>
          </div><!-- End Stats Item -->

          <div class="col-lg-3 col-md-6">
            <div class="stats-item d-flex align-items-center w-100 h-100">
              <i class="bi bi-clipboard-data color-green flex-shrink-0"></i>
              <div>
                <span data-purecounter-start="0" data-purecounter-end="@Model.JarenErvaring" data-purecounter-duration="1" class="purecounter"></span>
                <p>Jaren ervaring</p>
              </div>
            </div>
          </div><!-- End Stats Item -->

          <div class="col-lg-3 col-md-6">
            <div class="stats-item d-flex align-items-center w-100 h-100">
              <i class="bi bi-people color-pink flex-shrink-0"></i>
              <div>
                <span data-purecounter-start="0" data-purecounter-end="@Model.Medewerkers" data-purecounter-duration="1" class="purecounter"></span>
                <p>Medewerkers</p>
              </div>
            </div>
          </div><!-- End Stats Item -->

        </div>

      </div>
    </section><!-- End Stats Counter Section -->

    <!-- ======= Our Team Section ======= -->
    <section id="team" class="team">
