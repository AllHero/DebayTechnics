@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Contact>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using DebayTechnics.Models
@{
	Layout = "Master.cshtml";
}

<main id="main">
@Html.Partial("~/Views/Partials/Breadcrumbs.cshtml")
<!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
          <div class="col-lg-6">
            <div class="info-item  d-flex flex-column justify-content-center align-items-center">
              <i class="bi bi-map"></i>
              <h3>Adres</h3>
              <p>@Model.Adres</p>
            </div>
          </div><!-- End Info Item -->

          <div class="col-lg-3 col-md-6">
            <div class="info-item d-flex flex-column justify-content-center align-items-center">
              <i class="bi bi-envelope"></i>
              <h3>Email</h3>
              <p>@Model.Email</p>
            </div>
          </div><!-- End Info Item -->

          <div class="col-lg-3 col-md-6">
            <div class="info-item  d-flex flex-column justify-content-center align-items-center">
              <i class="bi bi-telephone"></i>
              <h3>Telefoon</h3>
              <p>@Model.Telefoon</p>
            </div>
          </div><!-- End Info Item -->

        </div>

        <div class="row gy-4 mt-1">

          <div class="col-lg-6 ">
            <iframe src="https://www.google.com/maps/embed/v1/place?q=Langestraat,+Zottegem,+België&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
          </div><!-- End Google Maps -->

          <div class="col-lg-6">
            @await Component.InvokeAsync("Contact", new ContactModel() {ContactFormId = Umbraco.AssignedContentItem.Id})
                                    
                                    @if (!string.IsNullOrEmpty(Context.Request.Query["success"]))
                                    {
                                        <div class="messages row">
                                            <div class="col">
                                                @if (Context.Request.Query["success"].ToString().ToLower() == "false")
                                                {
                                                    <div class="error-message">@Model.ErrorMessage</div>
                                                }
                                                else if (Context.Request.Query["success"].ToString().ToLower() == "true")
                                                {
                                                    <div class="sent-message">@Model.SuccessMessage</div>
                                                }
                                            </div>
                                        </div>
                                    }
          </div><!-- End Contact Form -->

        </div>

      </div>
    </section><!-- End Contact Section -->

</main>